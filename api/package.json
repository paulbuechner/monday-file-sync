{
  "name": "monday-file-sync",
  "version": "1.0.0",
  "license": "MIT",
  "repository": "https://github.com/paulbuechner/monday-file-sync.git",
  "description": "üîÅ Node script keeping local files synchronized with your monday dashboards.",
  "author": {
    "name": "Paul B√ºchner",
    "email": "paul-buechner@outlook.de",
    "url": "https://buechner.io"
  },
  "scripts": {
    "gen:env": "npx gen-env-types .env -o env.d.ts -e .",
    "build": "tsc",
    "watch": "tsc -w",
    "watch:file:dev": "nodemon -r dotenv/config --exec ts-node",
    "watch:file:prod": "set NODE_ENV=production && nodemon -r dotenv/config --exec ts-node",
    "start": "set NODE_ENV=production && node dist/index.js",
    "start:ts": "set NODE_ENV=production && ts-node src/index.ts",
    "dev": "nodemon --watch 'index.ts' --exec ts-node src/index.ts --verbose"
  },
  "dependencies": {
    "chokidar": "3.5.2",
    "date-fns": "^2.23.0",
    "dotenv-safe": "8.2.0",
    "event-stream": "^4.0.1",
    "monday-sdk-js": "0.1.2",
    "node-fetch": "2.6.1",
    "node-schedule": "^2.0.0",
    "reflect-metadata": "0.1.13",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-conventional": "13.1.0",
    "@types/event-stream": "^3.3.34",
    "@types/monday-sdk-js": "0.1.2",
    "@types/node": "14.17.9",
    "@types/node-fetch": "2.5.12",
    "@types/node-schedule": "^1.3.2",
    "@types/nodemon": "1.19.1",
    "@types/prettier": "2.3.2",
    "eslint": "7.32.0",
    "eslint-config-galex": "2.16.7",
    "nodemon": "2.0.12",
    "ts-node": "10.2.0",
    "typescript": "4.4.2"
  },
  "optionalDependencies": {
    "fsevents": "2.3.2"
  }
}
